<div class="container">
	<h1>Battleship</h1>
	<h3>Player <%= @player %></h3>
	<div id="my_id" value="<%= @player%>"></div>
	<div class="col-md-12">
		<div class="row">
			<button id="create_game">Create Game</button>
			<button id="join_game">Join Game</button>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-6">
				<h2>Your board</h2>
				<table id="my_board" class="table table-striped table-bordered table-hover table-condensed">
				</table>
			</div>
			<div class="col-md-6">
				<h2>Enemy's board</h2>
				<table id="opponent_board" class="table table-striped table-bordered table-hover table-condensed">
				</table>
			</div>
		</div>
	</div>
</div>